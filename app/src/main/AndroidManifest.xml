<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.etiantian.onlineschoolandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/MyBaseTheme"
        tools:replace="android:allowBackup, android:theme">
        <activity android:name=".modules.splash.LaunchActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.login.UserPrivacyActivity"></activity>
        <activity android:name=".modules.login.RegisterActivity"></activity>
        <activity android:name=".modules.login.LogoutActivity"></activity>
        <activity android:name=".entrance.TabBarNavigationActivity"></activity>
        <activity
            android:name=".modules.welcome.WelcomeActivity"
            android:launchMode="singleTask">

        </activity>
        <activity android:name=".entrance.BaseActivity" />
        <activity android:name=".modules.login.LoginActivity" />
        <activity
            android:name=".MainActivity">

        </activity>
    </application>

</manifest>