            android:name=".modules.splash.LaunchActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.login.UserPrivacyActivity" />
        <activity android:name=".modules.login.RegisterActivity" />
        <activity android:name=".modules.login.LogoutActivity" />
        <activity android:name=".entrance.TabBarNavigationActivity" />
        <activity
            android:name=".modules.welcome.WelcomeActivity"
            android:launchMode="singleTask" />
