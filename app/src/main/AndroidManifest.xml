        <activity android:name=".modules.mycourse.ai_test.AITestListActivity" />
        <activity android:name=".modules.mycourse.wisdom_study.WisdomListActivity" />
        <activity android:name=".modules.mycourse.subject_detail.SubjectDetailActivity" />
