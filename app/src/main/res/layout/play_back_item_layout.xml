<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/live_item_shape"
        android:elevation="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <TextView
            android:id="@+id/title_textview"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#FF262525"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/time_textview"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/title_textview"
            android:textSize="11sp"
            android:textColor="#FFAEAEAE"
            android:text="2019-08-16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/avatar_relative"
            android:layout_below="@id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.ruffian.library.widget.RImageView
                android:layout_centerVertical="true"
                app:corner_radius="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:id="@+id/avatar_imageview"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
            <TextView
                android:id="@+id/teacher_textview"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/avatar_imageview"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="章老师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:id="@+id/line_"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            android:layout_below="@id/avatar_relative"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <View
            android:id="@+id/vertical_line"
            android:background="@android:color/darker_gray"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/line_"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/vertical_line"
            android:layout_below="@id/line_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/download_icon"
                    android:background="@mipmap/download_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/download_icon"
                    android:textColor="#bfbfbf"
                    android:text="下载"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/vertical_line"
            android:layout_below="@id/line_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/playback_icon"
                    android:background="@mipmap/play_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/playback_icon"
                    android:textColor="#bfbfbf"
                    android:text="回放"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
